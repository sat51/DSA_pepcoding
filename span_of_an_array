import java.io.*;
import java.util.*;

public class Main{

public static void main(String[] args) throws Exception {
    Scanner sc =  new Scanner(System.in);
    int n = sc.nextInt();
    int arr[] = new int[n];
    for(int i = 0;i<arr.length;i++)
    {
        arr[i] = sc.nextInt();
    }
    Arrays.sort(arr);
    System.out.println(arr[n-1]-arr[0]);
    // write your code here
 }

}
